---
export interface Props {
  title: string;
  navigation: boolean;
  information: boolean;
}

const { title, navigation, information } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}hatch.png`}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="top">
      <h2 class={navigation ?  "" : "hidden"}>
        <a href={import.meta.env.BASE_URL}><-</a>
      </h2>
      <h1>
        <a href={`${import.meta.env.BASE_URL}about`}>ode to mom</a>
      </h1>
      <h2></h2>
    </div>
    <div class="bottom">
      <h2 class={information ? "" : "hidden"}>
        <a href={`${import.meta.env.BASE_URL}about`}>i</a>
      </h2>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  html {
    height: 100%;
    width: 100%;
  }
  body {
    padding: 16px;
    margin: auto;
  }
  a:visited {
    color: blue;
  }
  h1 {
    text-align: center;
  }
  h1 a {
    text-decoration: none;
    color: black;
  }
  h2 a {
    text-decoration: none;
    color: black;
  }
  h2 a:visited {
    text-decoration: none;
    color: black;
  }
  h1 a:visited {
    text-decoration: none;
    color: black;
  }
  .top {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .hidden {
    visibility: hidden;
  }
  .bottom {
    bottom: 0;
    position: fixed;
    padding: 16px;
  }
  .bottom h2 {
    margin: 0;
  }
</style>
