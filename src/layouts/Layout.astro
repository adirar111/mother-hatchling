---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.BASE_URL + "/hatch.png"}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
    <slot />
</html>

<style is:global>
  html {
    height: 100%;
    width: 100%;
  }
  body {
    padding: 16px;
  }
  a:visited {
    color: blue;
  }
  h1 {
    text-align: center;
  }
  h1 a {
    text-decoration: none;
    color: black;
  }
  h2 a {
    text-decoration: none;
    color: black;
  }
  h2 a:visited {
    text-decoration: none;
    color: black;
  }
  h1 a:visited {
    text-decoration: none;
    color: black;
  }
</style>
