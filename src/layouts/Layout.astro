---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.BASE_URL + "/hatch.png"}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <h1 class="title">
      <a href={import.meta.env.BASE_URL}>an ode to my mom</a>
    </h1>
    <slot />
  </body>
</html>

<style is:global>
  a:visited {
    color: blue;
  }
  body {
    margin: auto;
    padding: 1.5rem;
    max-width: 800px;
  }
  h1 {
    text-align: center;
  }
  h1 a {
    text-decoration: none;
    color: black;
  }
  h1 a:visited {
    text-decoration: none;
    color: black;
  }
</style>
